<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    >

  <Button
      android:id="@+id/course_add_btn"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_below="@id/add_check_me"
      android:layout_centerHorizontal="true"
      android:layout_marginBottom="10dp"
      android:layout_marginEnd="50dp"
      android:layout_marginStart="50dp"
      android:layout_marginTop="20dp"
      android:background="@drawable/button_login"
      android:text=" Add "
      android:textColor="@color/white"
      android:textSize="20sp"
      android:textStyle="bold"
      />

  <CheckBox
      android:id="@+id/add_check_cs"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@id/course_add_btn"
      android:layout_below="@id/course_add_tv2"
      android:text="CSE"
      android:textSize="15sp"
      />

  <CheckBox
      android:id="@+id/add_check_csit"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/course_add_tv2"
      android:layout_toEndOf="@id/add_check_cs"
      android:text="CSIT"
      android:textSize="15sp"
      />

  <CheckBox
      android:id="@+id/add_check_ece"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/course_add_tv2"
      android:layout_toEndOf="@id/add_check_csit"
      android:text="ECE"
      android:textSize="15sp"
      />

  <CheckBox
      android:id="@+id/add_check_me"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_alignStart="@id/course_add_btn"
      android:layout_below="@id/add_check_cs"
      android:text="ME"
      android:textSize="15sp"
      />

  <CheckBox
      android:id="@+id/add_check_ee"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/add_check_csit"
      android:layout_toEndOf="@id/add_check_me"
      android:text="EE"
      android:textSize="15sp"
      />

  <CheckBox
      android:id="@+id/add_check_ce"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/add_check_ece"
      android:layout_toEndOf="@id/add_check_ee"
      android:text="CE"
      android:textSize="15sp"
      />

  <EditText
      android:id="@+id/course_add_name"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_below="@id/course_dialog_head"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@id/course_add_tv1"
      android:gravity="center_vertical"
      android:inputType="text"
      android:minWidth="250dp"
      android:padding="5dp"
      android:textColor="@color/black"
      android:textColorHint="@color/light_black"
      android:textSize="17sp"
      android:textStyle="normal"
      />
  <EditText
      android:id="@+id/course_add_no"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_below="@id/course_add_tv1"
      android:layout_marginStart="10dp"
      android:layout_toEndOf="@id/course_add_tv1"
      android:gravity="center_vertical"
      android:inputType="text"
      android:minWidth="250dp"
      android:padding="10dp"
      android:textColor="@color/black"
      android:textColorHint="@color/light_black"
      android:textSize="17sp"
      android:textStyle="normal"
      />
  <TextView
      android:id="@+id/course_dialog_head"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:gravity="center_vertical"
      android:padding="10dp"
      android:text=" Add Course "
      android:textColor="@color/blue"
      android:textSize="20sp"
      android:textStyle="bold"
      />
  <TextView
      android:id="@+id/course_add_tv1"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_below="@id/course_dialog_head"
      android:layout_marginStart="5dp"
      android:gravity="center_vertical"
      android:padding="5dp"
      android:text="Course name  :"
      android:textColor="@color/light_black"
      android:textSize="17sp"
      android:textStyle="bold"
      />

  <TextView
      android:id="@+id/course_add_tv2"
      android:layout_width="wrap_content"
      android:layout_height="40dp"
      android:layout_below="@id/course_add_tv1"
      android:layout_marginStart="5dp"
      android:gravity="center_vertical"
      android:padding="5dp"
      android:text="Course Code   :"
      android:textColor="@color/light_black"
      android:textSize="17sp"
      android:textStyle="bold"
      />
</RelativeLayout>
