<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/course_card"
      android:layout_marginEnd="10dp"
      android:layout_marginStart="10dp"
      android:layout_marginTop="15dp"
      android:background="@color/nav_item_focussed"
      android:paddingTop="10dp">
    
    <TextView
        android:layout_width="180dp"
        android:layout_height="30dp"
        android:id="@+id/course_code"
        android:text="Course Code"
        android:textSize="15sp"
        android:textColor="@color/blue"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:layout_marginStart="10dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:id="@+id/course_name"
        android:layout_below="@+id/course_code"
        android:text="Course Name"
        android:minHeight="40dp"
        android:textColor="@color/light_black"
        android:textSize="18sp"
        android:layout_marginStart="10dp"/>
    
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/course_arrow"
        android:src="@drawable/icon_next"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:contentDescription="details"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/course_me_pic"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/icon_mech"
        android:fadingEdge="horizontal"
        android:layout_marginStart="@id/course_arrow"
        android:layout_centerVertical="true"
        android:requiresFadingEdge="horizontal"
        android:layout_gravity="center_vertical"
        android:visibility="gone"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/course_ee_pic"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:src="@drawable/icon_ee"
      android:fadingEdge="horizontal"
      android:layout_marginStart="@id/course_me_pic"
      android:layout_centerVertical="true"
      android:requiresFadingEdge="horizontal"
      android:layout_gravity="center_vertical"
      android:visibility="gone"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/course_cs_pic"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:src="@drawable/icon_cs"
      android:fadingEdge="horizontal"
      android:layout_marginStart="@id/course_ee_pic"
      android:layout_centerVertical="true"
      android:requiresFadingEdge="horizontal"
      android:layout_gravity="center_vertical"
      android:visibility="gone"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/course_csit_pic"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:src="@drawable/icon_csit"
      android:fadingEdge="horizontal"
      android:layout_marginStart="@id/course_cs_pic"
      android:layout_centerVertical="true"
      android:requiresFadingEdge="horizontal"
      android:layout_gravity="center_vertical"
      android:visibility="gone"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/course_ece_pic"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:src="@drawable/icon_ece"
      android:fadingEdge="horizontal"
      android:layout_marginStart="@id/course_csit_pic"
      android:layout_centerVertical="true"
      android:requiresFadingEdge="horizontal"
      android:layout_gravity="center_vertical"
      android:visibility="gone"/>

  <de.hdodenhof.circleimageview.CircleImageView
      android:id="@+id/course_ce_pic"
      android:layout_width="25dp"
      android:layout_height="25dp"
      android:src="@drawable/icon_ce"
      android:fadingEdge="horizontal"
      android:layout_marginStart="@id/course_ece_pic"
      android:layout_centerVertical="true"
      android:requiresFadingEdge="horizontal"
      android:layout_gravity="center_vertical"
      android:visibility="gone"/>
  
  <View
      android:layout_width="wrap_content"
      android:layout_height="3dp"
      android:background="@color/grey"
      android:layout_below="@id/course_name"
      android:layout_marginTop="10dp"/>


</RelativeLayout>